#%Module

###
# Add module help info in ModulesHelp area. This information will be seen by those
# invoking module help.
#
proc ModulesHelp { } {
        puts stderr "\tChemShell 3.7.1"
        puts stderr "\t==============\n"
        puts stderr "\tThis module sets up your environment to access ChemShell 3.7.1."
        puts stderr "\tOnce loaded you can use the ChemShell script 'chemsh' or access"
        puts stderr "\tthe executable directly using the name \'chemsh.x\'."
        puts stderr " "
        puts stderr "\tThis version has been compiled with GAMESS-UK r6325 and GULP 4.5."
        puts stderr " "
        puts stderr "\tFor access to ChemShell please contact the ARCHER helpdesk"
        puts stderr "\tat helpdesk@archer.ac.uk"
        puts stderr " "
        puts stderr "\tInstalled by: D Sloan-Murphy, EPCC"
        puts stderr "\tDate: 16 August 2017"
        puts stderr " "
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

conflict chemshell

# Set Path 
set CHEMSHELL_TOP_LEVEL /work/y07/shared/tcl-chemshell
set CHEMSHELL_LEVEL 3.7.1m+nwchem-gcc10
set CHEMSHELL_CURPATH ${CHEMSHELL_TOP_LEVEL}/${CHEMSHELL_LEVEL}/chemsh-tcl
set TCL_CURPATH ${CHEMSHELL_TOP_LEVEL}/${CHEMSHELL_LEVEL}/tcl8.6.8

prepend-path PATH ${CHEMSHELL_CURPATH}/bin
prepend-path PATH ${CHEMSHELL_CURPATH}/scripts

setenv CHEMSHELL_DIR ${CHEMSHELL_CURPATH}
setenv TCLLIBPATH ${CHEMSHELL_CURPATH}/tcl
setenv TCL_LIBRARY ${TCL_CURPATH}/lib/tcl8.6
setenv CHEMSH_DATA_DIR ${CHEMSHELL_CURPATH}/data
