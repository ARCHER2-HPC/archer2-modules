# Clashes
conflict gct

proc ModulesHelp { } {
  puts stderr "GCT (Globus Grid Community Toolkit) 6.2"
  puts stderr "=======================================\n"
  puts stderr "This toolkit provides community-based support"
  puts stderr "for critical software packages for grid computing.\n"
  puts stderr "Documentation for GridFTP (covering the globus-url-copy command)"
  puts stderr "can be found via https://gridcf.org/gct-docs/6.2/gridftp/user/index.html .\n"
  puts stderr "Please note, this module does not yet support parallel streams."
  puts stderr "We are however working to enable this feature and will update this"
  puts stderr "text once that work has been completed.\n"
  puts stderr "Installed by: S. Booth, EPCC"
  puts stderr "Date: 24 May 2021"
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

set          GCT_ROOT /work/y07/shared/gct/v6.2.20201212

prepend-path PATH $GCT_ROOT/bin
prepend-path CPATH $GCT_ROOT/include
prepend-path MANPATH $GCT_ROOT/share/man
prepend-path LIBRARY_PATH $GCT_ROOT/lib
prepend-path LD_LIBRARY_PATH $GCT_ROOT/lib
prepend-path LD_RUN_PATH $GCT_ROOT/lib
prepend-path PKG_CONFIG_PATH $GCT_ROOT/lib/pkgconfig
